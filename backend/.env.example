# PostgreSQL (asyncpg)
# For Supabase session pooler (example, placeholders only)
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@aws-0-ap-northeast-1.pooler.supabase.com:5432/postgres?sslmode=require

DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres?sslmode=require


# Comma-separated exact origins (no trailing slash)
ALLOWED_ORIGINS=http://localhost:5173

# Owner auth
OWNER_PASS=change-me
JWT_SECRET=replace-with-32+-char-random
TOKEN_MINUTES=43200

# Optional custom web root for uploads
# WEB_ROOT=/absolute/path/to/your/wwwroot
